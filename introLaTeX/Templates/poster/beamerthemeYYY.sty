% custom colors
%\definecolor{TitleBackground}{HTML}{FF006A00} % Binghamton green
\definecolor{TitleBackground}{RGB}{0,43,127} % Binghamton green
%\definecolor{TitleBackground}{RGB}{85,107,47} % Binghamton green
\definecolor{GeneralBackground}{RGB}{211,211,211} % Light gray
\definecolor{Separators}{RGB}{124,252,0} % Lawn green

% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=TitleBackground}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}
\setbeamercolor{logo in headline}{fg=black,bg=white}
\setbeamercolor{separation line}{bg=Separators}

% footline colors and fonts
%\setbeamercolor{footline}{fg=white,bg=TitleBackground}
%\setbeamerfont{footline}{fg=white, size=\normalsize}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=white}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{bg=TitleBackground,fg=white}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
%\setbeamercolor*{example title}{fg=white,bg=GeneralBackground}
%\setbeamerfont{example title}{size=\large,series=\bf,bg=TitleBackground,fg=white}

\setbeamercolor{alerted text}{fg=white}

\setbeamertemplate{itemize items}{\color{TitleBackground}$\blacktriangleright$}
%\setbeamersize{itemize items}{\normalsize}
%\setbeamersize{itemize subitems}{\normalsize}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.5ex
  \begin{beamercolorbox}[leftskip=.2cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[colsep*=.75ex,sep=-.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip.25ex}{\vskip.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
\begin{beamercolorbox}[wd=\paperwidth]{headline}
\raggedright
\vskip30pt
\begin{minipage}{\linewidth}
\raggedright
\usebeamercolor{title in headline}{\color{fg}\textbf{\huge{\inserttitle}}\bigskip}
\end{minipage}
\vspace{10pt}

\begin{minipage}{.964\linewidth}
\raggedleft
\usebeamercolor{author in headline}{\color{fg}\large{Jane Doe \& John Smith $|$ University of Maryland\bigskip}}
\end{minipage}

\vskip1ex
\end{beamercolorbox} 
\vskip-40pt
